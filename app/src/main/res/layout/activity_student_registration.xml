<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dima.teacherorganizer.StudentRegistration">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/surname"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/surname"
        android:inputType="textCapSentences|textAutoCorrect"
        android:password="false" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/name_teacher"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_teacher"
        app:met_floatingLabel="highlight"
        android:textColor="@color/color_primary"
        android:layout_below="@+id/surname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textCapSentences|textAutoCorrect" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/middle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/middle_name"
        android:textColor="@color/color_primary"
        android:layout_below="@+id/name_teacher"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="textCapSentences|textAutoCorrect" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login"
        android:inputType="textEmailAddress"
        android:textColor="@color/color_primary"
        android:layout_below="@+id/middle_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.gc.materialdesign.views.ButtonFlat
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/add_teacher"
        android:text="@string/add_student"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
